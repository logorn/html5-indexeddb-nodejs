<% include ../layout/templates/header %>
<% include ../layout/templates/navbar %>
<% include ../layout/content/homeMessage %>

<div class="container" id="entityList">
    <div id="driverPanel" class="panel panel-info">
        <div class="panel-heading"><h2>Driver list</h2></div>
        <div class="panel-body">
            <table class="table table-striped table-bordered text-center">
                <thead>
                <tr>
                    <td>Id</td>
                    <td>First name</td>
                    <td>Last name</td>
                    <td>Car</td>
                    <td>Actions</td>
                </tr>
                </thead>
                <tbody>
                <tr v-for="driver in drivers">
                    <td>{{driver.id}}</td>
                    <td>{{driver.firstName}}</td>
                    <td>{{driver.lastName}}</td>
                    <td>{{driver.car}}</td>
                    <td>
                        <a v-bind:href="'../driver/show/'+driver.id"><span
                                    class="glyphicon glyphicon-eye-open"></span></a>
                        <a v-bind:href="'../driver/edit/'+driver.id"><span
                                    class="glyphicon glyphicon-pencil"></span></a>
                        <a v-bind:href="'../driver/delete/'+driver.id"><span
                                    class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
                </tbody>
            </table>
            <a href="../driver/new">
                <button type="button" class="btn btn-success">Create new entity</button>
            </a>
        </div>
    </div>
</div>

<script>
    showAllDriver();
</script>

<% include ../layout/templates/footer %>