<% include ../layout/templates/header %>
<% include ../layout/templates/navbar %>
<% include ../layout/content/homeMessage %>

<div class="container" id="entityList">
    <div class="panel panel-info">
        <div class="panel-heading"><h2>Driver list</h2></div>
        <div class="panel-body">
            <table class="table table-striped table-bordered text-center">
                <thead>
                <tr>
                    <td>Id</td>
                    <td>First name</td>
                    <td>Last name</td>
                    <td>Car</td>
                    <td>Actions</td>
                </tr>
                </thead>
                <tbody>
                <tr v-for="item in items">
                    <td>{{item.id}}</td>
                    <td>{{item.firstName}}</td>
                    <td>{{item.lastName}}</td>
                    <td>{{item.car}}</td>
                    <td>
                        <a v-bind:href="'../'+entityType+'/show/'+item.id"><span
                                    class="glyphicon glyphicon-eye-open"></span></a>
                        <a v-bind:href="'../'+entityType+'/edit/'+item.id"><span
                                    class="glyphicon glyphicon-pencil"></span></a>
                        <a v-bind:href="'../'+entityType+'/delete/'+item.id"><span
                                    class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
                </tbody>
            </table>
            <a v-bind:href="'../'+entityType+'/new'">
                <button type="button" class="btn btn-success">Create new entity</button>
            </a>
        </div>
    </div>
</div>

<script>
    var entityType = 'driver';
    fetchAll(entityType);
</script>

<% include ../layout/templates/footer %>