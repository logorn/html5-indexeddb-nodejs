<% include ../layout/templates/header %>
<% include ../layout/templates/navbar %>
<% include ../layout/content/homeMessage %>

<div class="container" id="entityList">
    <div class="panel panel-warning">
        <div class="panel-heading"><h2>Edit Driver {{items.id}}</h2></div>
        <div class="panel-body">
            <form>
                <div class="form-group">
                    <label for="inputDriverFirstName">First name</label>
                    <input type="text" class="form-control" id="inputDriverFirstName" v-bind:value="items.firstName">
                </div>
                <div class="form-group">
                    <label for="inputDriverLastName">Last name</label>
                    <input type="text" class="form-control" id="inputDriverLastName" v-bind:value="items.lastName">
                </div>
                <div class="form-group">
                    <label for="inputDriverCar">Car</label>
                    <input type="text" class="form-control" id="inputDriverCar" v-bind:value="items.car">
                </div>
            </form>
            <input type="submit" class="btn btn-warning" value="Update entity">
            <a v-bind:href="'../../'+entityType">
                <button type="button" class="btn btn-info">Back to the list</button>
            </a>
        </div>
    </div>
</div>

<script>
    var entityType = 'driver';
    fetchOne(entityType, <%= id %>);
</script>

<% include ../layout/templates/footer %>