<% include ../layout/templates/header %>
<% include ../layout/templates/navbar %>
<% include ../layout/content/homeMessage %>

<div class="container" id="entityList">
    <div id="carPanel" class="panel panel-info">
        <div class="panel-heading"><h2>Car list</h2></div>
        <div class="panel-body">
            <table class="table table-striped table-bordered text-center">
                <thead>
                <tr>
                    <td>Id</td>
                    <td>Maker</td>
                    <td>Model</td>
                    <td>Year</td>
                    <td>Driver</td>
                    <td>Actions</td>
                </tr>
                </thead>
                <tbody>
                <tr v-for="car in cars">
                    <td>{{car.id}}</td>
                    <td>{{car.maker}}</td>
                    <td>{{car.model}}</td>
                    <td>{{car.year}}</td>
                    <td>{{car.driver}}</td>
                    <td>
                        <a v-bind:href="'../car/show/'+car.id"><span
                                    class="glyphicon glyphicon-eye-open"></span></a>
                        <a v-bind:href="'../car/edit/'+car.id"><span
                                    class="glyphicon glyphicon-pencil"></span></a>
                        <a v-bind:href="'../car/delete/'+car.id"><span
                                    class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
                </tbody>
            </table>
            <a href="../car/new">
                <button type="button" class="btn btn-success">Create new entity</button>
            </a>
        </div>
    </div>
</div>

<script>
    showAllCar();
</script>

<% include ../layout/templates/footer %>