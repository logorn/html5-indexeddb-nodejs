<% include ../layout/templates/header %>
<% include ../layout/templates/navbar %>
<% include ../layout/content/homeMessage %>

<div class="container" id="entityList" a>
    <div class="panel panel-success">
        <div class="panel-heading"><h2>New Car</h2></div>
        <div class="panel-body">
            <form id="carForm" v-on:submit.prevent="save">
                <div class="form-group">
                    <label for="inputCarMaker">Maker</label>
                    <input type="text" class="form-control"
                           v-model="car.maker" placeholder="Enter Car Maker">
                </div>
                <div class="form-group">
                    <label for="inputCarModel">Model</label>
                    <input type="text" class="form-control"
                           v-model="car.model" placeholder="Enter Car Model">
                </div>
                <div class="form-group">
                    <label for="inputCarYear">Year</label>
                    <input type="text" class="form-control"
                           v-model="car.year" placeholder="Enter Car Year">
                </div>
                <div class="form-group">
                    <label for="inputCarDriver">Driver</label>
                    <input type="text" class="form-control"
                           v-model="car.driver" placeholder="Enter Car Driver">
                </div>
                <input type="submit" id="saveCar" class="btn btn-success" value="Add a new entity">
                <a href="../../car">
                    <button type="button" class="btn btn-info">Back to the list</button>
                </a>
            </form>
        </div>
    </div>
</div>

<script>
    formAddCar();
</script>

