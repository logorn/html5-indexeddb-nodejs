<% include ../layout/templates/header %>
<% include ../layout/templates/navbar %>
<% include ../layout/content/homeMessage %>

<div class="container" id="entityList">
    <div class="panel panel-warning">
        <div class="panel-heading"><h2>Edit Car</h2></div>
        <div class="panel-body">
            <form id="carForm" v-on:submit.prevent="save">
                <div class="form-group">
                    <label for="inputCarMaker">Maker</label>
                    <input type="text" class="form-control" v-model="car.maker">
                </div>
                <div class="form-group">
                    <label for="inputCarModel">Model</label>
                    <input type="text" class="form-control" v-model="car.model">
                </div>
                <div class="form-group">
                    <label for="inputCarYear">Year</label>
                    <input type="date" class="form-control" v-model="car.year">
                </div>
                <div class="form-group">
                    <label for="inputCarDriver">Driver</label>
                    <input type="text" class="form-control" v-model="car.driver">
                </div>
                <input type="submit" id="saveCar" class="btn btn-warning" value="Update entity">
                <a href="../../car">
                    <button type="button" class="btn btn-info">Back to the list</button>
                </a>
            </form>
        </div>
    </div>
</div>

<script>
    formEditCar(<%= id %>);
</script>

<% include ../layout/templates/footer %>